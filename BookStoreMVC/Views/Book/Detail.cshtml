@model BookStoreMVC.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Book Detail";
    Layout = "_Layout";
}

<section id="hero">
    <!-- Flex Container -->
    <div class="container max-w-7xl  grid grid-cols-3  gap-10 px-6 mx-auto space-y-0 mt-20">
        <!-- Left item -->
        <div class="  min-h-fit ">
            <img src=@Model.Book.SignedUrl class="object-cover w-full h-[35rem] rounded-lg " alt=@Model.Book.ImageName>
        </div>
        <!-- End Left Item -->

        <!-- Right item -->
        <div class="col-span-2 flex flex-col justify-between">
            <h1 class="text-4xl text-titleText font-bold ">@Model.Book.Title</h1>
            <h2 class="text-normalText font-light text-xl">@Model.Book.authorDisplay</h2>
            <h3 class=" font-light text-xl text-primary">******</h3>
            <div class="basis-2/5">
                <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. A reiciendis ea soluta quae odit at iusto
                    pariatur saepe. Nisi molestias culpa eius voluptas fuga magni ut atque amet odio temporibus?</p>

                <p class="mt-2 break-all text-normalText ">@Model.Book.Description</p>
            </div>


            <div class="flex flex-col gap-2 w-1/2  mt-5 px-4 py-3 bg-white rounded-lg shadow-lg">
                <h1 class="text-2xl font-bold text-titleText">Publish infomation</h1>
                <div class="flex justify-between">
                    <h2 class="text-normalText">IBSN</h2>
                    <h2 class="text-titleText font-medium">@Model.Book.Isbn</h2>
                </div>
                <div class="flex justify-between">
                    <h2 class="text-normalText">Page Count</h2>
                    <h2 class="text-titleText font-medium">@Model.Book.PageCount</h2>
                </div>
                <div class="flex justify-between">
                    <h2 class="text-normalText">Language</h2>
                    <h2 class="text-titleText font-medium">@Model.Book.Language.Code</h2>
                </div>
                <div class="flex justify-between ">
                    <h2 class="text-normalText  basis-1/2">Genre</h2>
                    <h2 class="text-titleText basis-1/2 font-medium truncate ">@foreach (var genre in Model.Book.Genre)
                        {
                            <span>@genre.Name</span>
                                    }</h2>
                </div>
            </div>

            <form action="" class="mt-3">
                <button class="bgButton w-1/2 py-2 font-medium flex justify-center gap-2"><span class="font-bold">300,000Ä‘</span> - <span class="flex gap-2">Add To Cart  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="w-6 h-6  ">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                </svg> </span> </button>
            </form>



        </div>
    </div>
    <!-- End Right item -->
</section>
