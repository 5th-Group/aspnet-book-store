@model PaginatedList<BookStoreMVC.ViewModels.BookViewModel>

@{
  ViewBag.Title = "Book index";
  Layout = "_Layout";
}

<section id="bookBrowse">
  <!-- Flex Container -->

  <div class="overflow-x-auto relative shadow-lg rounded-lg max-w-7xl mx-auto">
    @* Search bar *@
    <div class="flex justify-end items-center p-4 bg-gray-900">
      <label for="table-search" class="sr-only">Search</label>
      <div class="relative">
        <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
          <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor"
            viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <input type="text" id="table-search-users"
          class="block p-2 pl-10 w-80 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          placeholder="Search...">
      </div>
    </div>
    @* End Search bar *@

    <table class="w-full text-sm text-left text-gray-400">
      @* Header *@
      <thead class="text-xs  uppercase bg-gray-700 text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6">
            Book
          </th>
          <th scope="col" class="py-3 px-6">
            Place Holder
          </th>
          <th scope="col" class="py-3 px-6">
            Place Holder
          </th>
          <th scope="col" class="py-3 px-6">
            Status
          </th>
          <th scope="col" class="py-3 px-6 text-center">
            Action
          </th>
        </tr>
      </thead>
      @* End Header *@
      <tbody>
        @foreach (var item in Model)
        {
          <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600">

            <th scope="row" class="flex items-center py-4 pl-5  whitespace-nowrap text-white">
              <img class="w-20 h-30 rounded-lg" src="@item.SignedUrl">
              <div class="pl-3">
                <div class="text-base font-semibold">@item.Title</div>
                <div class="font-normal text-gray-500">@item.Author</div>
              </div>
            </th>
            <td class="py-4 px-6">
              placeholder
            </td>
            <td class="py-4 px-6">
              placeholder
            </td>
            <td class="py-4 px-6">
              <div class="flex items-center">
                <div class="h-2.5 w-2.5 rounded-full bg-green-400 mr-2"></div> Ok
              </div>
            </td>
            <td class="py-4 px-6 text-center space-x-2">
              <a class="font-medium text-blue-500 hover:underline">Detail</a>
              <a class="font-medium text-emerald-600 hover:underline">Edit </a>
              <a class="font-medium text-red-600 hover:underline">Delete</a>
            </td>
          </tr>
        }


      </tbody>
    </table>
    @{
      var prevDisabled = !Model.HasPreviousPage ? true : false;
      var nextDisabled = !Model.HasNextPage ? true : false;
    }
    @* Button *@
    <div class="flex justify-center space-x-3 py-4 bg-slate-600 text-white">
      <a asp-action="BookIndex" asp-route-pageNumber="@(Model.PageIndex - 1)"
        class="@(prevDisabled ? "pointer-events-none bg-slate-700" : "") inline-flex items-center px-4 py-2 text-sm font-medium   border  rounded-lg bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-700 hover:text-white">
        Previous
      </a>

      <!-- Next Button -->

      <a class="@(nextDisabled ? "pointer-events-none bg-slate-700" : "")  inline-flex items-center px-4 py-2 ml-3 text-sm font-medium border rounded-lg bg-gray-800
        border-gray-700 text-gray-400 hover:bg-gray-700 hover:text-white " asp-action="BookIndex"
        asp-route-pageNumber="@(Model.PageIndex + 1)">
        Next
      </a>


    </div>

    <!-- Previous Button -->





  </div>


</section>
