@model BookStoreMVC.ViewModels.AuthorViewModel

@{
    ViewBag.Title = "Add Author";
    Layout = "_Layout";
}


<section id="formAddAuthor">
    <div class="max-w-fit ml-20">
        <h1 class="mb-7 text-3xl font-bold text-titleText">Add Author</h1>
        <form asp-action="AddAuthor" class="text-titleText">
            <div class="mb-7 ">
                <label class="mb-9" asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" appearance-none
                    class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
                <span asp-validation-for="@Model.FirstName" class="text-red-700"></span>
            </div>
            <div class="mb-7">
                <label class="mb-9" asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName"
                    class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
                <span asp-validation-for="@Model.LastName" class="text-red-700"></span>
            </div>
            <div class="mb-7">
                <label class="mb-9" asp-for="@Model.Initials"></label>
                <input asp-for="@Model.Initials"
                    class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />

            </div>
            <div class="mb-7">
                <label class="mb-9" asp-for="@Model.Description" as></label>
                <input asp-for="@Model.Description"
                    class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
                <span asp-validation-for="@Model.Description" class="text-red-700"></span>
            </div>

            <button type="submit" class="nonBgButton w-full py-2">Add</button>
        </form>
    </div>


</section>
