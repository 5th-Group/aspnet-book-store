@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="flex  justify-center bg-gradient-to-tr from-primary2-400 to-teal-300 min-h-screen">
    @* Welcome back *@
    <div class="flex-col flex  self-center p-10 sm:max-w-5xl xl:max-w-2xl  z-10">
        <div class="self-start flex flex-col  text-white">

            <h1 class="mb-3 font-bold text-5xl">Welcome to SwiftLib ! </h1>
            <p class="pr-3">Lorem ipsum is placeholder text commonly used in the graphic, print,
                and publishing industries for previewing layouts and visual mockups</p>
        </div>
    </div>
    @* Welcome back *@
    <div class="flex justify-center self-center z-10 rounded-2xl shadow-lg overflow-clip max-w-md">
        <div class="p-12 bg-white mx-auto w-100 ">
            @* Sign in *@
            <div class="mb-4">
                <h3 class="font-semibold text-3xl text-titleText">Create Account </h3>
                <p class="text-gray-500 ">Get access to exclusive features by creating an account.</p>
            </div>
            @* Sign in *@


            <div class="space-y-5">
                @* Name *@
                <div class="space-x-2 flex">
                    <div class="w-1/2">
                        <label class=" text-sm font-medium text-gray-700 tracking-wide">First Name</label>
                        <input
                            class="w-full  text-base px-4 py-2 border-2  border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors duration-300"
                            type="" placeholder="John">
                    </div>
                    <div class="w-1/2">
                        <label class=" text-sm font-medium text-gray-700 tracking-wide">Last Name</label>
                        <input
                            class="w-full  text-base px-4 py-2 border-2  border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors duration-300"
                            type="" placeholder="Cena">
                    </div>
                </div>
                @* Name *@

                @* Email *@
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-700 tracking-wide">Email</label>
                    <input
                        class=" w-full text-base px-4 py-2 border-2  border-gray-300 rounded-lg focus:outline-none focus:border-primary transition-colors duration-300"
                        type="" placeholder="nbi6731@gmail.com">
                </div>
                @* Email *@

                @* Password *@
                <div class="space-y-2">
                    <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                        Password
                    </label>
                    <input
                        class="w-full content-center text-base px-4 py-2 border-2   border-gray-300 rounded-lg focus:outline-none focus:border-primary"
                        type="password" placeholder="Enter your password">
                </div>
                @* Password *@

                @* repeat Password *@
                <div class="space-y-2">
                    <label class="mb-5 text-sm font-medium text-gray-700 tracking-wide">
                        Comfirm Password
                    </label>
                    <input
                        class="w-full content-center text-base px-4 py-2 border-2   border-gray-300 rounded-lg focus:outline-none focus:border-primary"
                        type="password" placeholder="Comfirm password">
                </div>
                @* repeat Password *@


                <div class="mt-9 ">
                    <button type="submit"
                        class="w-full  flex justify-center bg-primary2-400 hover:bg-primary text-gray-100 p-3  rounded-full tracking-wide font-semibold  shadow-lg cursor-pointer transition ease-in duration-500">
                        Sign in
                    </button>
                </div>

            </div>
            <div class="mt-9 text-center">
                <h2>Already a member? <a href="" class="text-primary hover:underline">Sign In</a></h2>
            </div>
        </div>
    </div>

</div>