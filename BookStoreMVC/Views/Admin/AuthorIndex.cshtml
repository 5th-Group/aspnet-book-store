@model PaginatedList<BookStoreMVC.ViewModels.AuthorViewModel>

@{
    ViewBag.Title = "Author index";
    Layout = "_Layout";
    var prevDisabled = !Model.HasPreviousPage ? true : false;
    var nextDisabled = !Model.HasNextPage ? true : false;
}


<section id="authorIndex">
    <!-- Flex Container -->
    <div class="overflow-x-auto relative shadow-lg rounded-lg max-w-7xl mx-auto">
        @* Search bar *@
        <div class="flex justify-end items-center p-4 bg-gray-900">
            <label for="table-search" class="sr-only">Search</label>
            <div class="relative">
                <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" aria-hidden="true" fill="currentColor"
                        viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                            clip-rule="evenodd"></path>
                    </svg>
                </div>
                <input type="text" id="table-search-users"
                    class="block p-2 pl-10 w-80 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    placeholder="Search...">
            </div>
        </div>
        @* End Search bar *@

        <table class="w-full text-sm text-left text-gray-400">
            @* Header *@
            <thead class="text-xs  uppercase bg-gray-700 text-gray-400">
                <tr>
                    <th scope="col" class="py-3 px-6">
                        ID
                    </th>
                    <th scope="col" class="py-3 px-6">
                        Name
                    </th>

                    <th scope="col" class="py-3 px-6">
                        Description
                    </th>
                    <th scope="col" class="py-3 px-6 text-center">
                        Action
                    </th>
                </tr>
            </thead>
            @* End Header *@
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="bg-gray-800 border-gray-700 hover:bg-gray-600">


                        <td class="py-4 px-6">
                            @item.Id
                        </td>

                        <td class="py-4 px-6">
                            @item.DisplayName
                        </td>
                        <td class="py-4 px-6">
                            @item.Description
                        </td>
                        <td class="py-4 px-6 text-center space-x-2">
                            <a class="font-medium text-blue-500 hover:underline">Detail</a>
                            <a class="font-medium text-emerald-600 hover:underline">Edit </a>
                            <form class="inline-block" method="post" asp-controller="Admin" asp-action="DeleteAuthor"
                            asp-route-authorID=@item.Id>
                                <button class="font-medium text-red-600 hover:underline cursor-pointer"
                                type="submit ">Delete</button>
                            </form>

                        </td>
                    </tr>
                }



            </tbody>
        </table>

        @* Not found MSG *@
        <div class="flex justify-center -space-x-px py-4 bg-slate-600 text-white">
            <h1 class="font-medium text-normalText">@ViewBag.Temp</h1>
        </div>
        @* Not found MSG *@

        @* Button *@
        @await Html.PartialAsync("_ControlBtnPartial", Model)



    </div>


</section>
