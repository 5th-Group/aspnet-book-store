@{
    var prevDisabled = !Model.HasPreviousPage ? true : false;
    var nextDisabled = !Model.HasNextPage ? true : false;
}
<div class="flex justify-center -space-x-px py-4 bg-slate-600 text-white">

    <!-- Next Button -->
    <a asp-action="BookIndex" asp-route-pageNumber="@(Model.PageIndex - 1)"
        class="@(prevDisabled ? "pointer-events-none bg-slate-700" : "") inline-flex items-center px-4 py-2 text-sm font-medium rounded-l-md   border   bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-700 hover:text-white">
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
        </svg> </a>
    <!-- Next Button -->

    @* Page num Buttons *@
    @for (var i = @Model.StartPage; i <= Model.EndPage; i++)
    {
        if (@Model.PageIndex == i)
        {
            <a href="#" aria-current="page"
        class="px-3 py-2  border   hover:bg-blue-100 hover:text-blue-700 border-gray-700 bg-gray-700 text-white">@i</a>
        }
        else
        {
            <a asp-route-pageNumber="@i" asp-action="BookIndex"
        class="px-3 py-2   border  bg-gray-800 border-gray-700 text-gray-400 hover:bg-gray-700 hover:text-white ">@i</a>
        }
    }
    @* Page num Buttons *@


    <!-- Previous Button -->
    <a class="@(nextDisabled ? "pointer-events-none bg-slate-700" : "")  inline-flex items-center px-4 py-2 ml-3 text-sm font-medium border rounded-r-md bg-gray-800
        border-gray-700 text-gray-400 hover:bg-gray-700 hover:text-white " asp-action="BookIndex"
        asp-route-pageNumber="@(Model.PageIndex + 1)">
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
        </svg>
    </a>
    <!-- Previous Button -->


</div>