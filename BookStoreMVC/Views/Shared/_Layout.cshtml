<!DOCTYPE html>
<html lang="en">

<head>
    @Html.SeoTags()
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <script type="text/javascript"
        src="https://platform-api.sharethis.com/js/sharethis.js#property=639ecabe4b058f001938ca18&product=inline-share-buttons&source=platform"
        async="async"></script>
</head>

<body class="font-inter bg-backGr">
    <!-- Navbar -->
    @Html.Partial("_NavbarPartial")
    <!-- End Nav -->

    <!--Main Content-->

    <div class="fb-share-button" data-href="https://aspnet-book-store-production-067c.up.railway.app/"
        data-layout="button_count">
    </div>
    <div class="sharethis-inline-share-buttons"></div>
    @RenderBody()

    </div>

    <!--End Main Content-->


    <!--Footer-->
    @Html.Partial("_FooterPartial")
    <!--Footer-->

    <!-- Messenger Chat Plugin Code -->
    <div id="fb-root"></div>

    <!-- Your Chat Plugin code -->
    <div id="fb-customer-chat" class="fb-customerchat">
    </div>

    <script>
        var chatbox = document.getElementById('fb-customer-chat');
        chatbox.setAttribute("page_id", "107380592227881");
        chatbox.setAttribute("attribution", "biz_inbox");
    </script>

    <!-- Your SDK code -->
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                xfbml: true,
                version: 'v15.0'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '1085574038877738',
                xfbml: true,
                version: 'v15.0'
            });
            FB.AppEvents.logPageView();
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>