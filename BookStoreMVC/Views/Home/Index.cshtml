<section id="hero">
    <!-- Flex Container -->
    <div class="container max-w-7xl flex items-center px-6 mx-auto space-y-0 mt-10">
        <!-- Left item -->
        <div class="flex flex-col mb-32 space-y-10 w-1/2">
            <h1 class="font-glory max-w-lg font-bold text-8xl text-titleText text-left">
                What book are you looking for ?
            </h1>
            <p class="max-w-sm text-normalText text-left">
                Manage makes it simple for software teams to plan day-to-day tasks
                while keeping the larger team goals in view.
            </p>
            <div class="flex justify-start">
                <button class="bgButton py-3 w-32 text-md font-bold">Get
                    Started</button>
            </div>

            <!-- End Left Item -->
        </div>
        <!-- Right item -->
        <div class="w-1/2 flex justify-items-end">

            <div class="flex flex-col ">
                <img class="object-cover w-[215px] h-[280px] rounded-lg rotate-[21deg] mb-5 ml-[116px]"
                    src="~/img/BoldDime.png" alt="bolddine.png">
                <img class="object-cover w-[215px] h-[280px] rounded-lg rotate-[21deg]" src="~/img/Brave The World.png"
                    alt="BraveTheWorld.png">
            </div>
            <img class="object-cover w-[215px] h-[280px] rounded-lg rotate-[21deg] mr-28 mt-60"
                src="~/img/Dark Screcets.png" alt="DarkScrecets.png">
        </div>
    </div>
    <!-- End Right item -->
</section>
